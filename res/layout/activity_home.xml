<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0091EA" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Home page"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="addBookClick"
            android:text="Add New Book"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/LL_Seperatr1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0091EA"
            android:orientation="horizontal" >
        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="issueBook"
            android:text="Issue Book"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/LL_Seperatr2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0091EA"
            android:orientation="horizontal" >
        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="returnbook"
            android:text="Return book"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/LL_Seperatr3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0091EA"
            android:orientation="horizontal" >
        </LinearLayout>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="changepassword"
            android:text="change password"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/LL_Seperatr4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0091EA"
            android:orientation="horizontal" >
        </LinearLayout>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="issuedbook"
            android:text="issued book"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/LL_Seperatr5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0091EA"
            android:orientation="horizontal" >
        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="showList"
            android:text="List Of Books"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>